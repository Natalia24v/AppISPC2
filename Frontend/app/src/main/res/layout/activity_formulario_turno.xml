<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formularioTurno"
    android:background="#000">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="92dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/default_box"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/title_box"
            android:elevation="4dp"
            android:padding="6dp"
            android:text="@string/title_agendar_turno"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/white_box"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp">

            <EditText
                android:id="@+id/nombre"
                android:layout_width="488dp"
                android:layout_height="48dp"
                android:hint="Nombre del paciente"
                android:textColorHint="#757575" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="134dp"
            android:background="@drawable/white_box"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp">

            <AutoCompleteTextView
                android:id="@+id/fecha"
                android:layout_width="488dp"
                android:layout_height="48dp"
                android:hint="Fecha de la cita"
                android:textColorHint="#757575" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="488dp"
            android:layout_height="64dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/white_box"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp">

            <AutoCompleteTextView
                android:id="@+id/hora"
                android:layout_width="488dp"
                android:layout_height="48dp"
                android:hint="Hora de la cita"
                android:textColorHint="#757575" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="272dp"
            android:background="@drawable/white_box"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp">

            <AutoCompleteTextView
                android:id="@+id/service"
                android:layout_width="488dp"
                android:layout_height="48dp"
                android:hint="tipo de servicio"
                android:textColorHint="#757575" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/white_box"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp">

            <AutoCompleteTextView
                android:id="@+id/sucursal"
                android:layout_width="488dp"
                android:layout_height="48dp"
                android:hint="Elegir sucursal"
                android:textColorHint="#757575" />
        </RelativeLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_box"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="TURNOW"
        app:titleMarginEnd="120dp"
        app:titleMarginStart="140dp"
        app:titleTextAppearance="@style/ToolbarTitleText"
        app:titleTextColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>